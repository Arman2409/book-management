generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:dev.db"
}

model Books {
  id            Int       @id @default(autoincrement())
  title         String    @unique
  isbn          String?   @unique
  publishedDate DateTime?
  authorId      Int
}

model Author {
  id    Int     @id @default(autoincrement())
  name  String  @unique
  email String? @unique
}
